{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name | default('') }}!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

{% if singleArticle is not null %}
    <div class="example-wrapper">
        <h2 class="page-header">Szczegóły artykułu</h2>
        <table class="table table-striped">
            <thead>
            <tr>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th scope="col">Tytuł</th>
                <td scope="row">{{ singleArticle.title }}</td>
            </tr>
            <tr>
                <th scope="col">Opis</th>
                <td scope="row">{{ singleArticle.content | striptags | raw }}</td>
            </tr>
            <tr>
                <th scope="col">Data dodania</th>
                <td scope="row">{{ singleArticle.pubDate|date("l jS \of F Y G:i:s") }}</td>
            </tr>
            <tr>
                <th scope="col">zdjęcie</th>
                <td scope="row"><img src="{{ singleArticle.enclosureUrl | default('no_image.png') }}"/></td>
            </tr>
            <tr>
                <td>
                    <a href="/main" class="btn btn-success btn-block">Powrót</a>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
{% else %}
    <p style="position: absolute; top: 50%; margin: 0 43%; width: 19%; color: red;">Artykuł o podanym ID nie istnieje.</p>
{% endif %}
{% endblock %}